@model IEnumerable<string>

@Html.ActionLink("Home", "List", @HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString())
@ViewBag.Controller

@foreach (var link in Model)
{
    @Html.RouteLink(link, new
{
    controller = @HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString(),
    action = "List",
    category = link,
    page = 1
},
    new {
        @class = link == ViewBag.SelectedCategory ? "selected" : null
    })
} 