@model Library.Domain.Entities.Book

<td>
    @if (Model.ImageData != null)
    {
        <div style="float:left;margin-right:20px">
            <img width="75" height="75" src="@Url.Action("GetImage", "Book",
                new { Model.BookID })" />
        </div>
    }
</td>
<td>
    @Html.ActionLink(Model.Title, "BookInfo",  new { Model.BookID })
</td> 
<td>
    @Html.DisplayFor(modelItem => Model.Description)
</td>
<td>
    @Html.DisplayFor(modelItem => Model.Author)
</td>
<td>
    @Html.DisplayFor(modelItem => Model.Year)
</td>