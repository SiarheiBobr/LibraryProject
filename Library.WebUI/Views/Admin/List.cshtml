@model Library.WebUI.Models.BooksListViewModel
@using Library.WebUI.HtmlHelpers

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>List of books</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Author
        </th>
        <th>
            Year
        </th>
        <th></th>
    </tr>

    @foreach (Library.Domain.Entities.Book item in Model.Books)
    {
        <tr>
            @{Html.RenderPartial("BookSummary", item);}
            <td>
                @Html.ActionLink("Edit", "Edit", new { bookid = item.BookID }) |
                @Html.ActionLink("Delete", "Delete", new { bookid = item.BookID })  
            </td>
        </tr>
    }



    </table>

